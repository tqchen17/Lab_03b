<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a349a4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topLeft_text"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:background="@drawable/p"
        android:gravity="center"
        android:tag="topLeft"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topRight_text"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:background="@drawable/p"
        android:gravity="center"
        android:tag="topRight"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomLeft_text"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:background="@drawable/p"
        android:gravity="center"
        android:tag="bottomLeft"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/bottomRight_text"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:background="@drawable/p"
        android:gravity="center"
        android:tag="bottomRight"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:max="100"
        android:min="5"
        android:progress="30"
        android:progressTint="@color/teal_700"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>